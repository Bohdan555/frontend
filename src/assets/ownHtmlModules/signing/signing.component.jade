//output:../../../app/signing/signing.component.html
.loginWrapper
  .container
    .row
      .col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2.col-xs-10.col-xs-offset-1
        .signIn
          form(action="#" method="method")
            .formName
              p sign in 
            .formFields
              .form-group
                label(for='email') Email
                input.form-control(type='email', name='email' placeholder='joetribani@gmail.com') 
              .form-group
                label(for='password') Password
                input.form-control(type='password', name='email')
              .checkbox
                input(type='checkbox' id='checkbox') 
                label.checkbox-label(for='checkbox') Stay logged In
                span.forgot-password Forgot password?  
              .signInButton            
                button.btn
                  span Sign In
                p or  
              .social-networks
                ul.list-inline
                  li
                    a(href="#",id='facebook') 
                  li
                    a(href="#",id='google-plus')
                  li
                    a(href="#",id='linkedIn')
                hr
              .footer
                span Don't have an account? 
                a(href="#") Sign Up
        .signUp
          form(action="#" method="method")
            .formName
              p sign up 
            .formFields
              .form-group
                label(for='name') Name
                input.form-control(type='text', name='name') 
              .form-group
                label(for='surname') Password
                input.form-control(type='type', name='surname')
              .form-group            
                .gender-checkboxes                  
                    label(for='male-checkbox') Male                  
                      input(type='radio' name='radio1' id='male-checkbox', value='option1' checked)
                      i.fa.fa-circle-o
                      i.fa.fa-dot-circle-o                    
                    label(for='female-checkbox') Female
                      input(type='radio' name='radio1' id='female-checkbox', value='option2')
                      i.fa.fa-circle-o
                      i.fa.fa-dot-circle-o                    
              hr
              .form-group
                label(for='email') Email
                input.form-control(type='email', name='email' placeholder='joetribani@gmail.com') 
              .form-group
                label(for='password') Password
                input.form-control(type='password', name='email')
              .signInButton            
                button.btn
                  span Sign Up
