.profile-experience
  .experience-header
    .container
      .row     
        .col-md-12      
          .title
            span Professional experience 
            i.fa.fa-pencil-square-o
          .varification.pull-right
            p Varified
  .experience-body
    .container
      .row(*ngFor = 'let experience of experiences')
        .col-md-12
          .experience-list
            .title
              p([innerHTML]='experience.description')
            .company
              p {{experience.company.name}}
              p {{experience.company.utl}}
              p {{experience.company.location.city}}, {{experience.company.location.country}}
              p {{experience.company.photo}}
              p {{experience.position}}
              p {{experience.timerange.timestart | date}} - {{experience.timerange.timefinish | date}}              
